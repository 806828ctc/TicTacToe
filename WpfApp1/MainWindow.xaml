<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="366" Width="366">
    <Grid Margin="0,0,0,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn00" Content="" Grid.Row="0" Grid.Column="0" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="0,0,116,0"/>
        <Button x:Name="btn01" Content="" Grid.Row="0" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn02" Content="" Grid.Row="0" Grid.Column="1" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="116,0,0,0"/>
        <Button x:Name="btn10" Content="" Grid.Column="0" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="0,0,116,0" Grid.Row="1"/>
        <Button x:Name="btn11" Content="" Grid.Column="1" FontSize="40" Click="Button_Click" Grid.Row="1"/>
        <Button x:Name="btn12" Content="" Grid.Column="1" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="116,0,0,0" Grid.Row="1"/>
        <Button x:Name="btn20" Content="" Grid.Row="1" Grid.Column="0" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="-1,94,116,0" Grid.RowSpan="2"/>
        <Button x:Name="btn21" Content="" Grid.Row="1" Grid.Column="1" FontSize="40" Click="Button_Click" Margin="0,94,0,0" Grid.RowSpan="2"/>
        <Button x:Name="btn22" Content="" Grid.Row="1" Grid.Column="1" FontSize="40" Click="Button_Click" Grid.ColumnSpan="2" Margin="116,94,0,0" Grid.RowSpan="2"/>
        <Button x:Name="btnNewGame" Content="New Game" Grid.Row="3" Margin="0,17,0,10" Click="btnNewGame_Click" FontSize="14" RenderTransformOrigin="0.488,-0.181" Grid.Column="1"/>
        <TextBlock x:Name="textBlock1" Text="New Game! Player 1 starts." Height="20" Width="176" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="85,1,0,0" Background="Gainsboro"/>
        <TextBlock x:Name="winnerBlock" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="38" Width="102" FontSize="16"/>
        <TextBlock x:Name="playerBlock" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text=" " VerticalAlignment="Center" Height="38" Width="102" Grid.Column="2" FontSize="16"/>
    </Grid>
</Window>