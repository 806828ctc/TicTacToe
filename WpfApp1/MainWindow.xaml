<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn00" Content="" Grid.Row="0" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn01" Content="" Grid.Row="0" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn02" Content="" Grid.Row="0" Grid.Column="2" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn10" Content="" Grid.Row="1" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn11" Content="" Grid.Row="1" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn12" Content="" Grid.Row="1" Grid.Column="2" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn20" Content="" Grid.Row="2" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn21" Content="" Grid.Row="2" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btn22" Content="" Grid.Row="2" Grid.Column="2" FontSize="40" Click="Button_Click"/>
        <Button x:Name="btnNewGame" Content="New Game" Grid.Row="2" Grid.ColumnSpan="3" Margin="90,73,90,7" Click="btnNewGame_Click"/>
        <TextBlock x:Name="textBlock1" Text="New Game! Player 1 starts." Height="20" Width="176" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="85,1,0,0" Background="Gainsboro"/>
    </Grid>
</Window>